@article{2017_Barcelo-Llull,
  title = {Anatomy of a Subtropical Intrathermocline Eddy},
  author = {{Barcel{\'o}-Llull}, B{\`a}rbara and Sangr{\`a}, Pablo and {Pall{\`a}s-Sanz}, Enric and Barton, Eric D. and {Estrada-Allis}, Sheila N. and {Mart{\'i}nez-Marrero}, Antonio and {Aguiar-Gonz{\'a}lez}, Borja and Grisol{\'i}a, Diana and Gordo, Carmen and {Rodr{\'i}guez-Santana}, {\'A}ngel and {Marrero-D{\'i}az}, {\'A}ngeles and Ar{\'i}stegui, Javier},
  year = {2017},
  month = jun,
  journal = {Deep Sea Research Part I: Oceanographic Research Papers},
  volume = {124},
  pages = {126--139},
  issn = {0967-0637},
  doi = {10.1016/j.dsr.2017.03.012},
  urldate = {2021-09-27},
  abstract = {An interdisciplinary survey of a subtropical intrathermocline eddy was conducted within the Canary Eddy Corridor in September 2014. The anatomy of the eddy is investigated using near submesoscale fine resolution two-dimensional data and coarser resolution three-dimensional data. The eddy was four months old, with a vertical extension of 500m and 46km radius. It may be viewed as a propagating negative anomaly of potential vorticity (PV), 95\% below ambient PV. We observed two cores of low PV, one in the upper layers centered at 85m, and another broader anomaly located between 175m and the maximum sampled depth in the three-dimensional dataset (325m). The upper core was where the maximum absolute values of normalized relative vorticity (or Rossby number), |Ro| =0.6, and azimuthal velocity, U=0.5ms-1, were reached and was defined as the eddy dynamical core. The typical biconvex isopleth shape for intrathermocline eddies induces a decrease of static stability, which causes the low PV of the upper core. The deeper low PV core was related to the occurrence of a pycnostad layer of subtropical mode water that was embedded within the eddy. The eddy core, of 30km radius, was in near solid body rotation with period of {\textasciitilde}4 days. It was encircled by a thin outer ring that was rotating more slowly. The kinetic energy (KE) content exceeded that of available potential energy (APE), KE/APE=1.58; this was associated with a low aspect ratio and a relatively intense rate of spin as indicated by the relatively high value of Ro. Inferred available heat and salt content anomalies were AHA=2.9{\texttimes}1018 J and ASA=14.3{\texttimes}1010kg, respectively. The eddy AHA and ASA contents per unit volume largely exceed those corresponding to Pacific Ocean intrathermocline eddies. This suggests that intrathermocline eddies may play a significant role in the zonal conduit of heat and salt along the Canary Eddy Corridor.},
  langid = {english},
  keywords = {Canary Eddy Corridor,Intrathermocline eddy,Mesoscale eddy,Potential vorticity},
  annotation = {25},
  file = {/Users/yao/Documents/300_Resources/Zotero/storage/D8VCBA9M/2017_Barceló-Llull2.pdf;/Users/yao/Documents/300_Resources/Zotero/storage/RY2AQF58/2017_Barceló-Llull.pdf;/Users/yao/Documents/300_Resources/Zotero/storage/79MNDRXH/S0967063716301935.html}
}

@article{2017_Cheng,
  title = {Intraseasonal-to-Semiannual Variability of Sea-Surface Height in the Astern, Equatorial {{Indian Ocean}} and Southern {{Bay}} of {{Bengal}}: {{SSH VARIABILITY IN THE SOUTHERN BOB}}},
  shorttitle = {Intraseasonal-to-Semiannual Variability of Sea-Surface Height in the Astern, Equatorial {{Indian Ocean}} and Southern {{Bay}} of {{Bengal}}},
  author = {Cheng, Xuhua and McCreary, Julian P. and Qiu, Bo and Qi, Yiquan and Du, Yan},
  year = {2017},
