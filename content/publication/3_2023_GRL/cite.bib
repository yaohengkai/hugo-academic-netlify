  shorttitle = {A Statistical Study on the Subthermocline Submesoscale Eddies in the Northwestern {{Pacific Ocean}} Based on {{Argo}} Data},
  author = {Li, Cheng and Zhang, Zhiwei and Zhao, Wei and Tian, Jiwei},
  year = {2017},
  month = may,
  journal = {Journal of Geophysical Research: Oceans},
  volume = {122},
