@article{2018_Ji,
  title = {Oceanic {{Eddy Characteristics}} and {{Generation Mechanisms}} in the {{Kuroshio Extension Region}}},
  shorttitle = {🔤黑潮延伸区大洋涡特征及生成机制},
  author = {Ji, Jinlin and Dong, Changming and Zhang, Biao and Liu, Yu and Zou, Bin and King, Gregory P. and Xu, Guangjun and Chen, Dake},
  year = {2018},
  month = nov,
  journal = {Journal of Geophysical Research: Oceans},
  volume = {123},
  number = {11},
  pages = {8548--8567},
  issn = {21699275},
  doi = {10.1029/2018JC014196},
  urldate = {2021-09-02},
  abstract = {🔤黑潮延伸区以其强烈的涡流活动而闻名。在本文中，我们利用 1993 年至 2012 年在黑潮扩展区域（140-180{\textdegree}E，25-45{\textdegree}N）的卫星测高测量的海面高度异常数据，分析了涡流特征：涡流大小，极性，寿命，强度、轨迹以及空间和时间分布。使用 Argo 浮标测量的温度和盐度垂直剖面，我们检查了涡流对垂直分层的影响。在这 20 年期间，确定了 7,574 个涡流（基于以下完整的涡流轨迹），其寿命等于或超过 4 周。发现气旋和反气旋涡流的数量大致相同。涡流大小的分布在半径约 40 公里处达到峰值。峰值处的半径与第一斜压变形半径或黑潮流的水平切变尺度处于同一数量级。归一化的涡统计特征表明，涡在其生命的不同阶段具有不同的特征。在寿命超过 50 周的涡流中，在 35{\textdegree}N 以北（南）发现了更多的反气旋（气旋）涡流。相反，在寿命短于 20 周的涡流中，在 35{\textdegree}N 以北（南）发现了更多的气旋（反气旋）涡流。涡流的不对称分布表明两种不同的涡流产生机制：（1）黑潮路径中曲流的发展导致具有更长寿命（更大尺寸）的涡流夹断和（2）水平剪切不稳定（正压不稳定）导致寿命较短的涡流（较小的尺寸）。我们进一步应用涡分辨数值产品来定量研究涡流产生机制。通俗易懂的总结 我们用 20 年的卫星数据分析了涡流特征，并检查了涡流对垂直分层的影响。此外，通过统计结果，我们提出了两种涡流产生机制：流动水平剪切诱导涡流产生和流道曲折导致涡流产生。然后，我们进一步应用涡分辨数值积来定量研究涡的产生机制。 The Kuroshio Extension region is well known for its strong eddy activity. In this paper, using satellite altimetry-measured sea surface height anomaly data from 1993 to 2012 in an extended Kuroshio Extension region (140{\textendash}180{\textdegree}E, 25{\textendash}45{\textdegree}N), we analyze eddy characteristics: eddy size, polarity, lifetime, intensity, trajectory, and spatial and temporal distributions. Using temperature and salinity vertical profiles measured by Argo floats, we examine the eddy impact on vertical stratification. During the 20-year period, 7,574 eddies are identified (based on following complete eddy trajectories) with a lifetime equal to or longer than 4 weeks. The numbers of cyclonic and anticyclonic eddies are found to be approximately the same. The distribution of eddy sizes peaks at a radius of about 40 km. The radius at the peak is at the same order as the first baroclinic deformation radius or the horizontal shear scale of the Kuroshio flow. The normalized eddy statistical characteristics show that eddies have different characteristics at different stages of their lifetimes. Among eddies with lifetimes longer than 50 weeks, more anticyclonic (cyclonic) eddies are found north (south) of 35{\textdegree}N. In contrast, among eddies with lifetimes shorter than 20 weeks, more cyclonic (anticyclonic) eddies are found north (south) of 35{\textdegree}N. The asymmetric distribution of eddies suggests two different eddy generation mechanisms: (1) the development of meanders in the Kuroshio path leading to the pinch off of eddies with longer lifetime (larger size) and (2) horizontal shear instability (barotropic instability) leading to eddies of shorter life (smaller size). We further apply an eddy-resolved numerical product to quantitatively investigate the eddy generation mechanisms. Plain Language Summary We analyze eddy characteristics with 20-year satellite data and examine the eddy impact on vertical stratification. Besides, through the statistic result, we propose two eddy generation mechanisms: flow horizontal shear-induced eddy generation and the meander of flow path leading to the eddy generation. And then, we further apply an eddy-resolved numerical product to quantitatively investigate the eddy generation mechanisms.},
  langid = {english},
  file = {/Users/yao/Documents/300_Resources/Zotero/storage/6GP2U3QU/2018_Ji.pdf}
}

