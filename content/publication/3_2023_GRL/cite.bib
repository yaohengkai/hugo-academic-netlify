@article{2017_Chu,
  title = {The Influence of {{ENSO}} on an Oceanic Eddy Pair in the {{South China Sea}}},
  author = {Chu, Xiaoqing and Dong, Changming and Qi, Yiquan},
  year = {2017},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {122},
