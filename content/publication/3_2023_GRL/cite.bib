@phdthesis{2016_ZhangZhiWei,
  title = {南海北部中尺度涡的三维结构与生消机制研究},
  author = {张志伟},
  year = {2016},
  month = jun,
  abstract = {南海蕴含着丰富的中尺度涡旋活动，开展南海中尺度涡研究对理解南海的物 质输运与机械能平衡问题具有重要意义。为探究南海中尺度涡的空间结构与生命 过程，课题组于 2013 年 10 月至 2014 年 6 月期间，在南海北部针对中尺度涡开 展了一系列综合性现场观测，称之为``南海中尺度涡观测实验''（简称 S-MEE）。 基于 S-MEE 实验所获得的大量现场资料，并结合其它观测数据和数值模式数据， 本文对南海北部中尺度涡的三维结构与输运作用、生成和消亡机制以及其它相关 问题展开了较为系统的研究。 基于 S-MEE 实验的两个潜标阵获得的观测数据，作者运用合成的方法刻画 了南海北部一个中尺度涡对（暖涡和冷涡）的全水深三维结构。发现南海北部中 尺度涡是全水深的海洋现象，它的信号能够从海表一直延伸到两三千米的海底； 在海底处中尺度涡的流速仍可达到 5.0 cm/s，因而对深海的物质输运具有潜在的 重要作用。同时发现，中尺度涡的三维结构在垂向上呈现显著的倾斜，从表层至 海底中尺度涡的轴心逐渐往西南方向倾斜，最大倾斜距离达到 150 公里。基于相 关理论分析作者初步认为，``地形 Beta 效应''对中尺度涡迁移的``牵引''作用 是造成南海北部中尺度涡垂向倾斜的主要原因。 基于南海北部中尺度涡的空间结构，作者定量评估了它们对水体的输运作 用。潜标阵观测和卫星观测表明，台湾西南海域的部分暖涡源自于``黑潮流套'' 的脱落，作者建议将该类暖涡命名为``黑潮流套涡旋''。结合``黑潮流套涡旋'' 的温盐结构和高度计的统计结果，作者估算了由于此类涡旋的脱落而引起的等效 水体输运。估算结果为 0.46 Sv，约占吕宋海峡上层平均水通量的 10\%{\textendash}17\%。同 时，作者还结合南海北部中尺度涡的垂向结构和涡旋统计信息，估算了由于中尺 度涡的非线性效应所造成的``拉格朗日''水体输运。南海北部中尺度涡在往西南 方向的迁移过程中，其所携带的水体能够造成 0.77 Sv 的南向输运，约占``南海 贯通流''净通量的 27.5\%。这些结果表明，南海北部中尺度涡在海盆间的物质交 换和海盆内的径向物质输运中均扮演着重要的角色 基于吕宋海峡内四套潜标的流速资料，作者阐明了海峡内流场两种不同周期 季节内震荡的产生机制。分析结果表明，海峡内流场的准 60 天周期震荡与太平 洋西传的中尺度涡对吕宋海峡以东黑潮的撞击有关，而 10{\textendash}30 天周期震荡则可能 由海峡内风场的季节内变化直接强迫产生。同时，作者探究了台湾西南海域冷涡 的生成机制，以及它对``黑潮流套涡旋''脱落的影响。``黑潮流套''进入南海后， 其北侧分支由于正压不稳定和满足``位涡守恒约束''，在台湾西南海域会生成一 个冷涡；该冷涡生成后往南迁移并对``黑潮流套''进行挤压，最终造成了``黑潮 流套涡旋'' 的脱落。该结果自洽地解释了为何在台湾西南海域暖涡和冷涡往往 以涡对的形式相伴而生。 最后，作者还基于对一个中尺度涡案例的生命过程的观测，通过分析中尺度 涡的能量收支方程，探究了它的主要消亡机制。结果表明，在中尺度涡边缘生成 了强烈的亚中尺度过程，而将能量正级串给亚中尺度过程构成了中尺度涡的主要 消亡机制。除此之外，底摩擦做功和垂向混合也造成了中尺度涡部分能量的耗散， 但总体而言二者对中尺度涡消亡的作用相对次之。尽管只是关于中尺度涡消亡机 制的个例研究，但该研究从现场观测的角度为``大洋中尺度涡如何消亡''难题开 辟了一条重要的途径。根据中尺度涡的能量耗散，估算了亚中尺度过程所对应的 水平涡动粘性系数 Ah，其量值为 75{\textendash}110 m2s-1，这为南海中尺度分辨率（{\textasciitilde}10 km） 的海洋模式关于如何选取 Ah 并设计合理的参数化方案提供了重要的参考。},
  school = {中国海洋大学},
  file = {/Users/yao/Documents/300_Resources/Zotero/storage/VJJLPRAM/2016_张志伟.pdf}
}

@article{2017_Amores,
  title = {Coherent Mesoscale Eddies in the {{North Atlantic}} Subtropical Gyre: 3-{{D}} Structure and Transport with Application to the Salinity Maximum: {{MESOSCALE EDDIES IN THE NORTH ATLANTIC}}},
  shorttitle = {Coherent Mesoscale Eddies in the {{North Atlantic}} Subtropical Gyre},
  author = {Amores, Angel and Melnichenko, Oleg and Maximenko, Nikolai},
  year = {2017},
  month = jan,
  journal = {Journal of Geophysical Research: Oceans},
  volume = {122},
  number = {1},
  pages = {23--41},
  issn = {21699275},
  doi = {10.1002/2016JC012256},
  urldate = {2021-09-02},
  abstract = {The mean vertical structure and transport properties of mesoscale eddies are investigated in the North Atlantic subtropical gyre by combining historical records of Argo temperature/salinity profiles and satellite sea level anomaly data in the framework of the eddy tracking technique. The study area is characterized by a low eddy kinetic energy and sea surface salinity maximum. Although eddies have a relatively weak signal at surface (amplitudes around 3{\textendash}7 cm), the eddy composites reveal a clear deep signal that penetrates down to at least 1200 m depth. The analysis also reveals that the vertical structure of the eddy composites is strongly affected by the background stratification. The horizontal patterns of temperature/salinity anomalies can be reconstructed by a linear combination of a monopole, related to the elevation/depression of the isopycnals in the eddy core, and a dipole, associated with the horizontal advection of the background gradient by the eddy rotation. A common feature of all the eddy composites reconstructed is the phase coherence between the eddy temperature/salinity and velocity anomalies in the upper \$300 m layer, resulting in the transient eddy transports of heat and salt. As an application, a box model of the near-surface layer is used to estimate the role of mesoscale eddies in maintaining a quasi-steady state distribution of salinity in the North Atlantic subtropical salinity maximum. The results show that mesoscale eddies are able to provide between 4 and 21\% of the salt flux out of the area required to compensate for the local excess of evaporation over precipitation.},
  langid = {english},
  file = {/Users/yao/Documents/300_Resources/Zotero/storage/E796U5ZH/2017_Amores.pdf}
}

