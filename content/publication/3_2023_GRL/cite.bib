@article{1995_Qiu,
  title = {Ventilation of the {{North Atlantic}} and {{North Pacific}}: {{Subduction Versus Obduction}}},
  shorttitle = {Ventilation of the {{North Atlantic}} and {{North Pacific}}},
  author = {Qiu, Bo and Huang, Rui Xin},
  year = {1995},
  month = oct,
  journal = {Journal of Physical Oceanography},
  volume = {25},
