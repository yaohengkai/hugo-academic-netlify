@article{2023_Shi,
  title = {Contrasting Trends in Short-Lived and Long-Lived Mesoscale Eddies in the {{Southern Ocean}} since the 1990s},
  author = {Shi, Fei and Luo, Yiyong and Wu, Renhao and Yang, Qinghua and Chen, Ruiyi and Wang, Chuanyin and Lin, Yichen and Chen, Dake},
  year = {2023},
