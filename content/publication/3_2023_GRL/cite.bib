@article{1995_Kawabe,
  title = {Variations of {{Current Path}}, {{Velocity}}, and {{Volume Transport}} of the {{Kuroshio}} in {{Relation}} with the {{Large Meander}}},
  author = {Kawabe, Masaki},
  year = {1995},
  month = dec,
  journal = {Journal of Physical Oceanography},
